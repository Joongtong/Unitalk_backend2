<configuration>
    <!-- 콘솔에 출력되는 로그 레벨 설정 -->
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="ch.qos.logback.classic.encoder.PatternLayoutEncoder">
            <pattern>
                %d{yyyy-MM-dd'T'HH:mm:ss.SSSXXX} %highlight(%-5level) %logger{36} - %msg%n
            </pattern>
        </encoder>
    </appender>

    <!-- root 로거 설정 -->
    <root level="INFO">
        <appender-ref ref="STDOUT" />
    </root>

    <!-- 개별 패키지에 대한 로그 레벨 설정 -->
    <logger name="org.hibernate.engine.transaction.jta.platform.internal.JtaPlatformInitiator" level="ERROR"/>
    <logger name="org.springframework.data.jpa" level="ERROR"/>
    <logger name="org.hibernate.cache.internal" level="ERROR"/>
    <logger name="org.springframework.security" level="INFO"/>
</configuration>
